/**index.wxss**/
/*首页内容  */
.index-content{
  padding:20rpx;
  margin-bottom: 100rpx;
}
.index-image{
  width: 100%;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  overflow: hidden;
  height:400rpx;
}
.index-title{
  margin-bottom: 30rpx;
  line-height: 40rpx;
}
.index-name{
  font-size: 34rpx;
  font-weight: 700;
}
.index-money{
  font-size: 24rpx;
  color: #a3a3a3;
}
.index-money-num{
  margin-right: 6rpx;
}
.fen{
  margin: 0 12rpx;
}
.index-ye{
  font-size: 24rpx;
  padding: 5rpx;
  color: #a3a3a3;
  border:2rpx solid #a3a3a3; 
  margin-right: 9rpx;
}

/*底部  */
.index-foot{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #0abbdb;
  color: #fff;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
}
.index-foot view{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}
.index-foot-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 18rpx;
  margin-bottom: 10rpx;
}
